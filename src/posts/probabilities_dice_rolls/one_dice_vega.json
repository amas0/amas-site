{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "background": "#f2f0e9",
  "padding": 5,
  "width": 500,
  "height": 300,
  "title": {
    "text": "Probabilities of rolling a single 6-sided dice",
    "frame": "group"
  },
  "style": "cell",
  "data": [
    {"name": "selector029_store"},
    {
      "name": "data-14b455258657544620b33bf146b635d3",
      "values": [
        {"y": 1, "pmf": 0.16666666666666666},
        {"y": 2, "pmf": 0.16666666666666666},
        {"y": 3, "pmf": 0.16666666666666666},
        {"y": 4, "pmf": 0.16666666666666666},
        {"y": 5, "pmf": 0.16666666666666666},
        {"y": 6, "pmf": 0.16666666666666666}
      ]
    },
    {
      "name": "data_0",
      "source": "data-14b455258657544620b33bf146b635d3",
      "transform": [{"type": "identifier", "as": "_vgsid_"}]
    },
    {
      "name": "data_1",
      "source": "data_0",
      "transform": [
        {
          "type": "filter",
          "expr": "isValid(datum[\"pmf\"]) && isFinite(+datum[\"pmf\"])"
        }
      ]
    },
    {
      "name": "data_2",
      "source": "data_0",
      "transform": [
        {
          "type": "filter",
          "expr": "(vlSelectionTest(\"selector029_store\", datum))"
        },
        {
          "type": "aggregate",
          "groupby": [],
          "ops": ["sum"],
          "fields": ["pmf"],
          "as": ["spmf"]
        },
        {
          "type": "formula",
          "expr": "\"P(selection)=\" + format(datum.spmf, \".2f\")",
          "as": "label"
        }
      ]
    }
  ],
  "signals": [
    {
      "name": "unit",
      "value": {},
      "on": [
        {"events": "mousemove", "update": "isTuple(group()) ? group() : unit"}
      ]
    },
    {
      "name": "selector029",
      "update": "vlSelectionResolve(\"selector029_store\", \"union\", true)"
    },
    {
      "name": "selector029_tuple",
      "on": [
        {
          "events": [{"source": "scope", "type": "click"}],
          "update": "datum && item().mark.marktype !== 'group' ? {unit: \"layer_0\", fields: selector029_tuple_fields, values: [(item().isVoronoi ? datum.datum : datum)[\"_vgsid_\"]]} : null",
          "force": true
        },
        {"events": [{"source": "scope", "type": "dblclick"}], "update": "null"}
      ]
    },
    {
      "name": "selector029_tuple_fields",
      "value": [{"type": "E", "field": "_vgsid_"}]
    },
    {
      "name": "selector029_toggle",
      "value": false,
      "on": [
        {
          "events": [{"source": "scope", "type": "click"}],
          "update": "event.shiftKey"
        },
        {"events": [{"source": "scope", "type": "dblclick"}], "update": "false"}
      ]
    },
    {
      "name": "selector029_modify",
      "on": [
        {
          "events": {"signal": "selector029_tuple"},
          "update": "modify(\"selector029_store\", selector029_toggle ? null : selector029_tuple, selector029_toggle ? null : true, selector029_toggle ? selector029_tuple : null)"
        }
      ]
    }
  ],
  "marks": [
    {
      "name": "layer_0_marks",
      "type": "rect",
      "style": ["bar"],
      "interactive": true,
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "fill": [
            {
              "test": "(vlSelectionTest(\"selector029_store\", datum))",
              "value": "#942222"
            },
            {"value": "#966e6e"}
          ],
          "x": {"scale": "x", "field": "y"},
          "width": {"scale": "x", "band": true},
          "y": {"scale": "y", "field": "pmf"},
          "y2": {"scale": "y", "value": 0}
        }
      }
    },
    {
      "name": "layer_1_marks",
      "type": "text",
      "style": ["text"],
      "interactive": false,
      "from": {"data": "data_1"},
      "encode": {
        "update": {
          "align": {"value": "center"},
          "dy": {"value": -6},
          "fill": [
            {
              "test": "(vlSelectionTest(\"selector029_store\", datum))",
              "value": "#942222"
            },
            {"value": "#966e6e"}
          ],
          "x": {"scale": "x", "field": "y", "band": 0.5},
          "y": {"scale": "y", "field": "pmf"},
          "text": {"signal": "format(datum[\"pmf\"], \".2\")"},
          "fontSize": {"value": 12},
          "baseline": {"value": "middle"}
        }
      }
    },
    {
      "name": "layer_2_marks",
      "type": "text",
      "style": ["text"],
      "interactive": false,
      "from": {"data": "data_2"},
      "encode": {
        "update": {
          "align": {"value": "left"},
          "fill": {"value": "#942222"},
          "x": {"value": 10},
          "y": {"value": 15},
          "text": {"signal": "''+datum[\"label\"]"},
          "fontSize": {"value": 16},
          "baseline": {"value": "middle"}
        }
      }
    }
  ],
  "scales": [
    {
      "name": "x",
      "type": "band",
      "domain": {"data": "data_1", "field": "y", "sort": true},
      "range": [0, {"signal": "width"}],
      "paddingInner": 0.1,
      "paddingOuter": 0.05
    },
    {
      "name": "y",
      "type": "linear",
      "domain": [0, 0.5],
      "range": [{"signal": "height"}, 0],
      "nice": true,
      "zero": true
    }
  ],
  "axes": [
    {
      "scale": "y",
      "orient": "left",
      "gridScale": "x",
      "grid": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "domain": false,
      "labels": false,
      "maxExtent": 0,
      "minExtent": 0,
      "ticks": false,
      "zindex": 0
    },
    {
      "scale": "x",
      "orient": "bottom",
      "grid": false,
      "title": "Dice outcome",
      "labelAlign": "center",
      "labelBaseline": "top",
      "labelOverlap": true,
      "zindex": 0
    },
    {
      "scale": "y",
      "orient": "left",
      "grid": false,
      "title": "Probability",
      "labelAlign": "right",
      "labelBaseline": "middle",
      "labelOverlap": true,
      "tickCount": {"signal": "ceil(height/40)"},
      "zindex": 0
    }
  ],
  "config": {
    "axis": {"labelAngle": 0, "labelFontSize": 14, "titleFontSize": 14},
    "style": {
      "guide-label": {"font": "noto sans"},
      "guide-title": {"font": "noto sans"},
      "group-title": {"font": "noto sans", "fontSize": 16},
      "group-subtitle": {"font": "noto sans"},
      "text": {"font": "noto sans"}
    }
  }
}